pipeline {
    agent { 
        node {
            label 'docker-agent-python'
        }
    }
    stages {
        stage('Clone Repository') {
            steps {
                echo "Cloning repository.."
                git url: 'https://github.com/cosminpopovici14/jenkins.git', branch: 'main'
            }
        }
        stage('Install CMake') {
            steps {
                echo "Installing CMake.."
                powershell '''
                $cmakeUrl = "https://github.com/Kitware/CMake/releases/download/v3.21.3/cmake-3.21.3-windows-x86_64.msi"
                $output = "cmake-3.21.3-windows-x86_64.msi"
                Invoke-WebRequest -Uri $cmakeUrl -OutFile $output
                Start-Process msiexec.exe -ArgumentList '/i', $output, '/quiet', '/norestart' -NoNewWindow -Wait
                '''
            }
        }
        stage('Build GTest') {
            steps {
                echo "Building GTest.."
                dir('tests/gtest') {
                    sh '''
                    mkdir -p build
                    cd build
                    cmake ..
                    make
                    '''
                }
            }
        }
        stage('Run GTest') {
            steps {
                echo "Running GTest.."
                dir('tests/gtest/build') {
                    sh './test_main'
                }
            }
        }
        stage('Install Python Dependencies') {
            steps {
                echo "Installing Python dependencies.."
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Python Test') {
            steps {
                echo "Running Python Test.."
                sh 'python3 test.py'
            }
        }
    }
}
