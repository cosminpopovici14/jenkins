pipeline {
    agent { 
        node {
            label 'docker-agent-python'
        }
    }
    stages {
        stage('Clone Repository') {
            steps {
                echo "Cloning repository with all branches.."
                sh 'git clone https://github.com/cosminpopovici14/jenkins.git'
                dir('jenkins') {
                    sh 'git remote update --prune'
                }
            }
        }
        stage('Verify CMake Installation') {
            steps {
                echo "Verifying CMake installation.."
                sh 'cmake --version'
            }
        }
        stage('Checkout Main Branch') {
            steps {
                echo "Checking out main branch.."
                dir('jenkins') {
                    sh 'git checkout main'
                }
            }
        }
        stage('Install Python Dependencies') {
            steps {
                echo "Installing Python dependencies.."
                dir('jenkins') {
                    sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install -r requirements.txt
                    '''
                }
            }
        }
        stage('Run Python Test') {
            steps {
                echo "Running Python Test.."
                dir('jenkins') {
                    sh '''
                    set -e
                    . venv/bin/activate
                    chmod +x test.py
                    python test.py
                    '''
                }
            }
        }
        stage('Checkout gtest Branch') {
            steps {
                echo "Checking out gtest branch.."
                dir('jenkins') {
                    sh '''
                    git stash
                    git checkout gtest
                    git stash pop || true
                    '''
                }
            }
        }
        stage('Build GTest') {
            steps {
                echo "Building GTest.."
                dir('jenkins') {
                    sh '''
                    # Verificăm locația CMakeLists.txt
                    if [ -f tests/gtest/CMakeLists.txt ]; then
                        cd tests/gtest
                    elif [ -f CMakeLists.txt ]; then
                        cd .
                    else
                        echo "CMakeLists.txt not found"
                        exit 1
                    fi
                    
                    # Construim GTest
                    set -e
                    if [ ! -d "build" ]; then
                        mkdir build
                    fi
                    cd build
                    cmake ..
                    cmake --build .
                    '''
                }
            }
        }
        stage('Run GTest') {
            steps {
                echo "Running GTest.."
                dir('jenkins/tests/gtest/build') {
                    sh '''
                    set -e
                    chmod +x ./test_main
                    ./test_main
                    '''
                }
            }
        }
    }
}
