pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                checkout([$class: 'GitSCM', 
                    branches: [[name: '*/main']], 
                    userRemoteConfigs: [[url: 'https://github.com/cosminpopovici14/jenkins.git']]
                ])
            }
        }

        stage('Add GoogleTest Submodule') {
            steps {
                echo 'Adding GoogleTest submodule...'
                dir('jenkins') {
                    sh 'git submodule add https://github.com/google/googletest.git tests/gtest'
                    sh 'git submodule update --init --recursive'
                }
            }
        }

        stage('Build GoogleTest') {
            steps {
                echo 'Building GTest...'
                dir('jenkins/tests/gtest') {
                    sh 'rm -rf build'
                    sh 'mkdir build'
                    sh 'cd build && cmake ..'
                    sh 'cd build && cmake --build .'
                    sh 'ls build'
                }
            }
        }

        stage('Run Tests') {
            when {
                expression { return fileExists('jenkins/tests/gtest/build/gtest_main') }
            }
            steps {
                echo 'Running GTest...'
                // Add your test execution commands here
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed!'
            // Add failure handling steps here if needed
        }
    }
}
